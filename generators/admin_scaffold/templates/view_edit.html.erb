<h1>Editing <%= singular_name %></h1>

<%% form_for([:<%= controller_class_nesting_downcase %>,@<%= singular_name %>]) do |f| %>
  <%%= f.error_messages %>

<% for attribute in attributes -%>
  <p>
    <%%= f.label :<%= attribute.name %> %><br />
    <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
  </p>
<% end -%>
  <p>
    <%%= f.submit 'Update' %>
  </p>
<%% end %>

<%%= link_to 'Show', [:<%= controller_class_nesting_downcase %>,@<%= singular_name %>] %> |
<%%= link_to 'Back', <%= controller_class_nesting_downcase %>_<%= plural_name %>_path %>